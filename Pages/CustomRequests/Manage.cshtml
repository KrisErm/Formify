@page
@model Formify.Pages.CustomRequests.ManageModel

@{
    ViewData["Title"] = "Кастомные заявки";

    string GetStatusBadgeClass(string statusName)
    {
        return statusName switch
        {
            "Новая" => "bg-warning",
            "Принят" => "bg-info",
            "В разработке" => "bg-info",
            "Собран" => "bg-info",
            "Отправлен" => "bg-info",
            "В пути" => "bg-warning", // Желтый
            "Доставлен" => "bg-warning", // Жёлтый
            "Завершен" => "bg-success", // Зеленый
            _ => "bg-secondary"
        };
    }
}

<div class="container py-4">
    <h1 class="mb-3">Кастомные заявки</h1>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (!Model.Requests.Any())
    {
        <p>Заявок пока нет.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Клиент</th>
                        <th>Статус</th>
                        <th>Тип формочки</th>
                        <th>Кол-во</th>
                        <th>Цена</th>
                        <th>Дата</th>
                        <th>Изображение</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var request in Model.Requests)
                    {
                        <tr>
                            <td>@request.Id</td>
                            <td>@request.UserName</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(request.StatusName)">
                                    @request.StatusName
                                </span>
                            </td>
                            <td>
                                @if (request.Items.Any())
                                {
                                    <div class="small">@request.Items.First().TypeName</div>
                                    @if (request.Items.Count > 1)
                                    {
                                        <div class="text-muted small">+ ещё @(request.Items.Count - 1)</div>
                                    }
                                }
                            </td>
                            <td>
                                @if (request.Items.Any())
                                {
                                    @request.Items.First().Quantity
                                }
                            </td>
                            <td>
                                @if (request.FinalPrice.HasValue)
                                {
                                    <span class="fw-bold">@request.FinalPrice?.ToString("0.00") ₽</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td>@request.CreateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                            <td>
                                @if (request.Images.Any())
                                {
                                    <span class="badge bg-info">@request.Images.Count</span>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@request.Id"
                                   class="btn btn-sm btn-primary">
                                    Открыть
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>