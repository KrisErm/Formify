@page
@model Formify.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Личный кабинет";
}

<div class="container py-5">
    <h1 class="mb-4">Личный кабинет</h1>

    <!-- Блок с данными клиента -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="about-card h-100">
                <h5>Мои данные</h5>
                <p class="mb-1"><strong>Имя:</strong> @Model.UserInfo.Name</p>
                <p class="mb-1"><strong>Email:</strong> @Model.UserInfo.Email</p>
                <p class="mb-0"><strong>Телефон:</strong> @Model.UserInfo.Phone</p>
            </div>
        </div>

        @if (User.IsInRole("admin"))
        {
            <div class="col-md-6">
                <div class="about-card h-100">
                    <h5>Режим администратора</h5>
                    <p>Вы можете управлять каталогом формочек и кастомными заявками.</p>
                    <div class="d-flex gap-2 mt-2">
                        <a asp-page="/Catalog/Manage" class="btn btn-primary btn-sm">
                            Управление каталогом
                        </a>
                        <a asp-page="/CustomRequests/Manage" class="btn btn-success btn-sm">
                            Все кастомные заявки
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- История заказов -->
    <h3 class="mb-3">Все заказы</h3>

    @if (!Model.Orders.Any())
    {
        <p class="text-muted">У вас ещё нет оформленных заказов.</p>
    }
    else
    {
        <div class="table-responsive mb-4">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Дата</th>
                        <th>Статус</th>
                        <th>Доставка</th>
                        <th>Сумма</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var o in Model.Orders)
                    {
                        <tr>
                            <td>@o.Id</td>
                            <td>@o.CreateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                            <td>@o.Status</td>
                            <td>@o.DeliveryMethod</td>
                            <td>@(o.TotalAmount?.ToString("0.00") ?? "-") ₽</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- История кастомных заявок -->
    @if (User.IsInRole("admin"))
    {
        <h3 class="mb-3">Все кастомные заявки</h3>

        @if (!Model.AllCustomRequests.Any())
        {
            <p class="text-muted">Кастомных заявок пока нет.</p>
        }
        else
        {
            <div class="table-responsive mb-4">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Клиент</th>
                            <th>Дата</th>
                            <th>Статус</th>
                            <th>Оценка стоимости</th>
                            <th>Комментарий админа</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.AllCustomRequests)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.UserName</td>
                                <td>@r.CreateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                                <td>@r.Status</td>
                                <td>@(r.FinalPrice?.ToString("0.00") ?? "—") ₽</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(r.CommentAdmin))
                                    {
                                        <span class="text-truncate d-inline-block" style="max-width: 150px;"
                                              title="@r.CommentAdmin">
                                            @r.CommentAdmin
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">—</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <a asp-page="/CustomRequests/Edit" asp-route-id="@r.Id"
                                       class="btn btn-sm btn-outline-primary">
                                        Открыть
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }

    <!-- Мои кастомные заявки (для всех пользователей, включая админа) -->
    <!-- История кастомных заявок -->
    @if (Model.IsAdmin)
    {
        <h3 class="mb-3">Все кастомные заявки</h3>
    }
    else
    {
        <h3 class="mb-3">Мои кастомные заявки</h3>
    }

    @if (!Model.CustomRequests.Any())
    {
        <p class="text-muted">Вы ещё не отправляли кастомных заявок.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Дата</th>
                        <th>Статус</th>
                        <th>Оценка стоимости</th>
                        <th>Комментарий администратора</th>
                        @if (!User.IsInRole("admin"))
                        {
                            <th></th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.CustomRequests)
                    {
                        <tr>
                            <td>@r.Id</td>
                            <td>@r.CreateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                            <td>@r.Status</td>
                            <td>@(r.FinalPrice?.ToString("0.00") ?? "—") ₽</td>
                            <td>
                                @if (!string.IsNullOrEmpty(r.CommentAdmin))
                                {
                                    <div class="card bg-light border-0">
                                        <div class="card-body p-2">
                                            <small>@r.CommentAdmin</small>
                                        </div>
                                    </div>
                                }
                                else
                                {
                                    <span class="text-muted">—</span>
                                }
                            </td>
                            @if (!User.IsInRole("admin"))
                            {
                                <td class="text-end">
                                    <a asp-page="/CustomRequests/Create" class="btn btn-sm btn-outline-primary">
                                        Новая заявка
                                    </a>
                                </td>
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    <!-- Кнопка создания новой заявки -->
    @if (!User.IsInRole("admin") && Model.CustomRequests.Any())
    {
        <div class="mt-3">
            <a asp-page="/CustomRequests/Create" class="btn btn-primary">
                Создать новую заявку
            </a>
        </div>
    }
</div>