@page
@model Formify.Pages.Account.IndexModel

@{
    ViewData["Title"] = "Личный кабинет";
}

<div class="container py-5">
    <h1 class="mb-4">Личный кабинет</h1>

    <!-- Блок с данными клиента -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="about-card h-100">
                <h5>Мои данные</h5>
                <p class="mb-1"><strong>Имя:</strong> @Model.UserInfo.Name</p>
                <p class="mb-1"><strong>Email:</strong> @Model.UserInfo.Email</p>
                <p class="mb-0"><strong>Телефон:</strong> @Model.UserInfo.Phone</p>
            </div>
        </div>

        @if (User.IsInRole("admin"))
        {
            <div class="col-md-6">
                <div class="about-card h-100">
                    <h5>Режим администратора</h5>
                    <p>Вы можете управлять каталогом формочек и кастомными заявками.</p>
                    <div class="d-flex flex-column gap-2 mt-2">
                        <a asp-page="/Catalog/Manage" class="btn btn-primary btn-sm">
                            Управление каталогом
                        </a>
                        <a asp-page="/CustomRequests/Manage" class="btn btn-outline-primary btn-sm">
                            Управление заявками
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Для обычных пользователей показываем заказы и кастомные заявки -->
    @if (!User.IsInRole("admin"))
    {
        <!-- История заказов -->
        <h3 class="mb-3">Мои заказы</h3>

        @if (!Model.Orders.Any())
        {
            <p class="text-muted">У вас ещё нет оформленных заказов.</p>
        }
        else
        {
            <div class="table-responsive mb-4">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Дата</th>
                            <th>Статус</th>
                            <th>Доставка</th>
                            <th>Сумма</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var o in Model.Orders)
                        {
                            <tr>
                                <td>@o.Id</td>
                                <td>@o.CreateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                                <td>@o.Status</td>
                                <td>@o.DeliveryMethod</td>
                                <td>@(o.TotalAmount?.ToString("0.00") ?? "-") ₽</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }

        <!-- История кастомных заявок -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h3 class="mb-0">Мои кастомные заявки</h3>
            @if (Model.CustomRequests.Any())
            {
                <a asp-page="/CustomRequests/History" class="btn btn-outline-primary btn-sm">
                    Вся история
                </a>
            }
        </div>

        @if (!Model.CustomRequests.Any())
        {
            <div class="alert alert-info">
                <p class="mb-2">Вы ещё не отправляли кастомных заявок.</p>
                <a asp-page="/CustomRequests/Create" class="btn btn-primary btn-sm">Создать первую заявку</a>
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm align-middle">
                    <thead>
                        <tr>
                            <th>№</th>
                            <th>Дата</th>
                            <th>Статус</th>
                            <th>Оценка стоимости</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var r in Model.CustomRequests)
                        {
                            <tr>
                                <td>@r.Id</td>
                                <td>@r.CreateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                                <td>
                                    <span class="badge @GetStatusBadgeClass(r.Status)">
                                        @r.Status
                                    </span>
                                </td>
                                <td>@(r.FinalPrice?.ToString("0.00") ?? "—") ₽</td>
                                <td class="text-end">
                                    <a asp-page="/CustomRequests/History" class="btn btn-sm btn-outline-info">
                                        Подробнее
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }
</div>

@functions {
    string GetStatusBadgeClass(string statusName)
    {
        return statusName switch
        {
            "Новая" => "bg-secondary",
            "Принят" => "bg-primary",
            "В разработке" => "bg-info",
            "Собран" => "bg-info",
            "Отправлен" => "bg-warning",
            "В пути" => "bg-warning",
            "Доставлен" => "bg-success",
            "Завершен" => "bg-success",
            _ => "bg-secondary"
        };
    }
}
