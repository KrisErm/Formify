@page "{id:long}"
@model Formify.Pages.Catalog.EditModel
@using System

@{
    ViewData["Title"] = "Редактировать продукт";
}

<div class="container py-4">
    <h1>Редактировать продукт</h1>

    <form method="post" enctype="multipart/form-data">
        <input type="hidden" asp-for="Input.Id" />

        <div class="mb-3">
            <label asp-for="Input.Name" class="form-label"></label>
            <input asp-for="Input.Name" class="form-control" />
            <span asp-validation-for="Input.Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Description" class="form-label"></label>
            <textarea asp-for="Input.Description" class="form-control" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Input.Price" class="form-label"></label>
            <input asp-for="Input.Price" class="form-control" />
            <span asp-validation-for="Input.Price" class="text-danger"></span>
        </div>

        @if (Model.Input.ImageData != null && !string.IsNullOrEmpty(Model.Input.ImageContentType))
        {
            var base64 = Convert.ToBase64String(Model.Input.ImageData);
            var imgSrc = $"data:{Model.Input.ImageContentType};base64,{base64}";
            <div class="mb-3">
                <label class="form-label">Текущее изображение</label><br />
                <img src="@imgSrc" alt="@Model.Input.Name" style="max-width: 200px;" />
            </div>
        }

        <div class="mb-3">
            <label class="form-label">Заменить изображение</label>
            <input asp-for="ImageFile" type="file" class="form-control" accept="image/*" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="Input.IsActive" class="form-check-input" />
            <label asp-for="Input.IsActive" class="form-check-label"></label>
        </div>

        <button type="submit" class="btn btn-primary">Сохранить</button>
        <a asp-page="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
