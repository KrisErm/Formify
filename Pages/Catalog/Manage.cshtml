@page
@model Formify.Pages.Catalog.ManageModel

@{
    ViewData["Title"] = "Управление каталогом";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">Управление каталогом</h1>
        <a asp-page="Create" class="btn btn-primary btn-sm">Добавить продукт</a>
    </div>

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="alert alert-danger">@Model.ErrorMessage</div>
    }

    @if (!Model.Products.Any())
    {
        <p>Товаров пока нет.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-sm align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Название</th>
                        <th style="width: 30%">Описание</th>
                        <th>Цена</th>
                        <th>Активен</th>
                        <th>Создан</th>
                        <th>Обновлён</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Products)
                    {
                        <tr>
                            <td>@p.Id</td>
                            <td>@p.Name</td>
                            <td class="small">
                                @if (!string.IsNullOrWhiteSpace(p.Description))
                                {
                                    @p.Description
                                }
                            </td>
                            <td>@p.Price.ToString("0.00")</td>
                            <td>
                                @if (p.IsActive)
                                {
                                    <span class="badge bg-success">Да</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Нет</span>
                                }
                            </td>
                            <td>@p.CreateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                            <td>@p.UpdateDate.ToLocalTime().ToString("dd.MM.yyyy")</td>
                            <td class="text-end">
                                <a asp-page="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-outline-secondary">
                                    Редактировать
                                </a>

                                <form method="post" asp-page-handler="Toggle"
                                      asp-route-id="@p.Id"
                                      class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-warning">
                                        @(p.IsActive ? "Скрыть" : "Показать")
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
